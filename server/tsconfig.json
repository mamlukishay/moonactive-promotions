{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": ["node_modules", ".vscode", "jest.config.js", "dist"]
}
